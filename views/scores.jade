extends layout

block content
  div.top
  h1 Enter the Kinect Tournament Score
  form.form-horizontal(method="post", id="scoreForm")
    div.form-group
      label(class="col-xs-4 control-label") First Name
      div(class="col-xs-4")
        input.span3(class="form-control",id="firstname", type="text", name="FirstName", placeholder="Enter the First Name")
    div.form-group
      label(class="col-xs-4 control-label") Last Name
      div(class="col-xs-4")
        input.span3(class='form-control',id="LastName", type="text", name="LastName", placeholder="Enter the Last Name")
    div.form-group
      label(class="col-xs-4 control-label") Score   
      div(class="col-xs-4")
          input.span3(class='form-control',id="score", type="score", name="Score", placeholder="Enter the Score")
    div.form-group
      div(class="col-xs-offset-4 col-xs-4")
        input.btn(type="submit", value="Submit", class="btn btn-default")